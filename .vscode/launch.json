    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch LUA",
            "type": "lua",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/lua/main.lua",
            "cwd": "${workspaceFolder}",
            "path": "${workspaceFolder}/lua/?.lua",
            "cpath": "${workspaceFolder}/lua/?.dll",
            "arg": [],
            "consoleCoding": "utf8"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "运行 main.ts",
            // "skipFiles": [
            // 	"<node_internals>/**"
            // ],
            "program": "${workspaceFolder}\\ts\\main.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/**/*.js"
            ]
        },
        {
            //"debugServer": 4711, // Uncomment for debugging the adapter
            "name": "Listen for XDebug",
            "type": "php",
            "request": "launch",
            "port": 9876,
            "log": true
        },
        {
            //"debugServer": 4711, // Uncomment for debugging the adapter
            "name": "Launch php",
            "request": "launch",
            "type": "php",
            "port": 9876,
            "program": "${workspaceRoot}/php/main.php",
            "cwd": "${workspaceRoot}/php",
            "externalConsole": false
        }
    ]
}