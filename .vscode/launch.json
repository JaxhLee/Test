    "version": "0.2.0",
    "configurations": [
        {
            "name": "launch LUA",
            "type": "lua",
            "request": "launch",
            "stopOnEntry": false,
            "program": "${workspaceFolder}/lua/main.lua",
            "cwd": "${workspaceFolder}",
            "path": "${workspaceFolder}/lua/?.lua",
            "cpath": "${workspaceFolder}/lua/?.dll",
            "arg": [],
            "consoleCoding": "utf8"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch TS",
            "program": "${workspaceFolder}/ts/main.ts",
            "preLaunchTask": "buildTS",
            "outFiles": [
                "${workspaceFolder}/ts/*.js"
            ]
        }
    ]
}